<div id="head">
  <ul>
    <li>
    <strong>All recipes</strong>
    </li>
    <li>
    <%= link_to "Log in", login_path %></li>
    <li>
    <%= link_to "Sign up", new_user_path %></</li>
  </ul>
<div>
<hr>


<p>
  <%= @current_user.username if @current_user %>
</p>
<p>
<%= @message if @message %>
</p>

<% @recipes.each do |recipe| %>
<div>
    <p>
    <%= recipe.name %>
    </p>
    <p>
    <%= recipe.approximate_time %> minutes
    </p>
    <p>
    Posted by: <%= recipe.creator %>
  </p><button><%= link_to "edit", edit_recipe_path(recipe) %></button>
  <button><%= link_to "delete", recipe, :method => :delete, data: { confirm: 'Are you sure?' } %></button>
  <button><%= link_to "more info", recipe_path(recipe) %><br></button>
    <%# star ratings, optional picture %>
</div>
<%end %>

<br>
<br>
<hr>

<%= link_to "Add your own recipe", new_recipe_path %>

<div class="">
  <button><%= link_to 'Logout', logout_path %></button>
</div>
